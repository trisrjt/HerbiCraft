<body>
    <div class="container-fluid h-custom container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <!-- <div class="col-md-9 col-lg-6 col-xl-6 my-lg-5 py-lg-5">
                <img src="/images/Cover-page-tree.avif" class="img-fluid" height="600" alt="cover tree">
            </div> -->
            <div class="col-md-10 col-lg-6 col-xl-5 offset-xl-1 my-lg-5 py-lg-5">
                <div class="card p-4 shadow-lg">
                    <h3 class="text-center mb-4">HerbiCraft</h3>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs nav-justified mb-3" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#login" role="tab">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#signup" role="tab">Signup</a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="login" role="tabpanel">
                            <form autocomplete="off" action="/users/login" method="post">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="loginEmail" name="email"
                                        placeholder="Enter your email">
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="loginPassword" name="password"
                                        placeholder="Enter your password">
                                </div>
                                <button type="submit" class="btn btn-success w-100">Login</button>
                            </form>
                        </div>
                        <div class="tab-pane" id="signup" role="tabpanel">
                            <form autocomplete="off" action="/users/register" method="post">
                                <div class="mb-3">
                                    <label for="fullname" class="form-label">Fullname</label>
                                    <input type="text" class="form-control" id="fullname" name="fullname"
                                        placeholder="Enter your fullname">
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="signupEmail" name="email"
                                        placeholder="Enter your email">
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="signupPassword" name="password"
                                        placeholder="Enter your password">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Signup</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <a href="/owners" class="btn btn-outline-light">Admin Login</a>
                </div>
            <!-- </div> -->
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

